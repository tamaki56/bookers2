<%= form_with model: @user, url: update_user_path(@user.id), method: :patch, local: true do |f| %>
  <label>Name</label>
  <%= f.text_field :name %>

  <label>Image</label>

  <label>Introduction</label>
  <%= f.text_area :introduction %>

  <%= f.submit 'Update User' %>
<% end %>