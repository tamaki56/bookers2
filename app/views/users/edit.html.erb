<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <% if @user.errors.any? %>
        <%= @user.errors.count %>errors prohibited this book from being saved:
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      
      <%= form_with model: @user, url: update_user_path(@user.id), method: :patch, local: true do |f| %>    
      <form>
        <div class="form-group">
          <label for="user_name">Name</label><br>
          <%= f.text_field :name %>
        </div>
        <div class="form-group">
          <label for="user_image">Image</label><br>
          <input type="file" name="example" accept="image/jpeg, image/png">
        </div>
        <div class="form-group">
          <label for="user_introduction">Introduction</label><br>
          <%= f.text_area :introduction %>
        </div>
        <div class="form-group">
          <%= f.submit 'Update User',class: "btn btn-secondary" %>
        </div>
      </form>
      <% end %>
    </div>
  </div>
</div>
