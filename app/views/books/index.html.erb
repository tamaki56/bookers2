<h1>Books#index</h1>
<p>Find me in app/views/books/index.html.erb</p>


<%= render 'list', books: @books,user: @user %>

<h2>Books</h2>

<table>
    <thead>
        <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
        </tr>
    </thead>
    
    <tbody>
        <% @books.each do |book| %>
        <tr>
            <td><%= image_tag @user.get_profile_image("40x40") %></td>
            <td><%= link_to "<%= book.title %>", book_path(book.id) %></td>
            <td><%= book.body %></td>
        </tr>
        <% end %>
    </tbody>
</table>