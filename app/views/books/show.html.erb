<div class="container px-5 px-sm-0">
    <div class="row">
        <div class="col-md-3">
        <%= render 'books/list', book: @new_book, user: @user %>
        </div>
        <div class="col-md-8 offset-md-1">
            <h2>Book detail</h2>
            
            <table class="table">
                <tbody>
                    <tr>
                        <td><%= image_tag @user.get_profile_image(40,40) %><br><%= link_to @user.name ,user_path(@user.id) %></td>
                        <td><%= link_to @book.title ,book_path(@book.id) %></td>
                        <td><%= @book.body %></td>
                        <% if @book.user == current_user %>
                            <td><%= link_to 'Edit', edit_book_path(@book.id), class: "btn btn-sm btn-success" %></td>
                            <td><%= link_to 'Destroy', destroy_book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？" , class: "btn btn-sm btn-danger" %></td>
                        <% end %>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
