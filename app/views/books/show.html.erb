<%= render 'list', books: @books,user: @user %>

<h2>Book detail</h2>

<table>
    <tbody>
        <tr>
            <td><%= image_tag @user.get_profile_image("40x40") %><br><%= @user.name %></td>
            <td><%= @book.title %></td>
            <td><%= @book.body %></td>
            <% if @book.user == current_user %>
                <td><%= link_to 'Edit', edit_book_path(@book.id) %></td>
                <td><%= link_to 'Destroy', destroy_book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？" %></td>
            <% end %>
        </tr>
    </tbody>
</table>