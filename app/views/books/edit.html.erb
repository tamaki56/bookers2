<h2>Editing Book</h2>

<%= form_with model: @book, url: update_book_path(@book.id), method: :patch, local: true do |f| %>
  <label>Title</label>
  <%= f.text_field :title %>

  <label>Opinion</label>
  <%= f.text_area :body %>

  <%= f.submit 'Update User' %>
<% end %>

<%= link_to "Show", book_path(@book.id) %>
<%= link_to "Back", books_path %>